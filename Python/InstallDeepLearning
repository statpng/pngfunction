# https://theorydb.github.io/dev/2020/02/14/dev-dl-setting-local-python/

conda create -n Tensorflow python=3.7
# conda env remove --name Tensorflow
conda activate Tensorflow
conda install -n Tensorflow ipython notebook jupyter 

conda install -n Tensorflow numpy scipy matplotlib pandas seaborn scikit-learn h5py pillow tqdm
conda install -n Tensorflow tensorflow

pip install gast==0.2.2
pip install tensorboard==2.1.0

python -m ipykernel install --user --name Tensorflow --display-name "Tensorflow"
# jupyter kernelspec uninstall Tensorflow 
# jupyter kernelspec list



conda create -n Tensorflow2.0 python=3.7
# conda env remove --name Tensorflow2.0
conda activate Tensorflow2.0
conda install -n Tensorflow2.0 ipython notebook jupyter 

conda install -n Tensorflow2.0 numpy scipy matplotlib pandas seaborn scikit-learn h5py pillow tqdm
conda install -n Tensorflow2.0 tensorflow

pip uninstall pyzmq
pip install pyzmq

pip install gast==0.2.2
pip install tensorboard==2.1.0

python -m ipykernel install --user --name Tensorflow2.0 --display-name "Tensorflow2.0"
# jupyter kernelspec uninstall Tensorflow2.0 
# jupyter kernelspec list



conda create -n PyTorch python=3.7
# conda env remove --name PyTorch
conda activate PyTorch
conda install -n PyTorch ipython notebook jupyter 

conda install -n PyTorch numpy scipy matplotlib pandas seaborn scikit-learn h5py pillow tqdm
conda install pytorch torchvision torchaudio cudatoolkit=10.2 -c pytorch

pip uninstall pyzmq
pip install pyzmq

python -m ipykernel install --user --name PyTorch --display-name "PyTorch"
# jupyter kernelspec uninstall PyTorch
# jupyter kernelspec list


